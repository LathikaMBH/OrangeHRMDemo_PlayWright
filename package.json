{
  "name": "la-playwright-taf",
  "version": "1.0.0",
  "description": "Playwright TypeScript Automation Framework with AI Agent",
  "main": "index.js",
  "scripts": {
    "setup": "./setup.sh",
    
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    
    "test:dev": "TEST_ENV=dev npx playwright test",
    "test:staging": "TEST_ENV=staging npx playwright test",
    "test:prod": "TEST_ENV=prod npx playwright test",
    
    "test:chrome": "npx playwright test --project=chromium",
    
    "test:smoke": "npx playwright test --grep @smoke",
    "test:regression": "npx playwright test --grep @regression",
    "test:api": "npx playwright test tests/api/",
    "test:visual": "npx playwright test --grep @visual",
    
    "report": "npx playwright show-report",
    "report:open": "REPORT_OPEN=true npx playwright show-report",
    
    "codegen": "npx playwright codegen",
    "install-browsers": "npx playwright install",
    "install-deps": "npx playwright install-deps",
    "update-snapshots": "npx playwright test --update-snapshots",
    
    "ai:generate": "node ai-agent/src/agent.js --generate",
    "ai:analyze": "node ai-agent/src/agent.js --analyze",
    "ai:test": "node dist/ai-agent/src/agent.js",
    
    "build": "tsc",
    "clean": "rm -rf test-results playwright-report reports screenshots videos",
    
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write ."
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing",
    "ai"
  ],
  "author": "LathikaMBH",
  "license": "ISC",
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@faker-js/faker": "^8.3.1",
    "@octokit/rest": "^20.0.2",
    "@playwright/test": "^1.40.0",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "allure-commandline": "^2.25.0",
    "allure-playwright": "^2.10.0",
    "commander": "^11.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "faker": "^6.6.6",
    "fs-extra": "^11.3.1",
    "glob": "^11.0.3",
    "inquirer": "^9.2.12",
    "moment": "^2.29.4",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0",
    "winston": "^3.11.0"
  }
}
